<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="assets/css/bootstrap.css" rel="stylesheet">
    <style type="text/css">
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }
    </style>
    <link href="assets/css/bootstrap-responsive.css" rel="stylesheet">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="../assets/js/html5shiv.js"></script>

    <script type="text/javascript" src="assets/js/custom/Script_menu.js"></script>
</head>

<body>

<!-- Nav Bar -->
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="brand" href="/">E-mmersion Linguistique</a>

            <div class="nav-collapse collapse">

                <ul class="nav pull-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Welcome, <%=session.user.name.first%>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/account"><i class="icon-cog"></i> Account Info</a></li>
                            <li><a href="/reportAbuse"><i class="icon-warning-sign"></i> Report Abuse</a></li>
                            <li><a href="/support"><i class="icon-envelope"></i> Contact Support</a></li>
                            <li class="divider"></li>
                            <li><a href="/api/account/logout"><i class="icon-share"></i> Log Out</a></li>
                        </ul>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- ./Nav Bar -->
<div class="container-fluid">
    <div class="row-fluid">

        <div class="span12">
            <form id="form-account" class="form-horizontal" action="/api/account/update" method="post">
                <fieldset>
                    <legend>Account Settings</legend>
                    <div class="control-group">
                        <label class="control-label">First Name</label>

                        <div class="controls">
                            <input type="text" value="<%= session.user.name.first %>" name="first_name"/>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Last Name</label>

                        <div class="controls">
                            <input type="text" value="<%= session.user.name.last %>" name="last_name"/>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Country</label>

                        <div class="controls">
                            <input type="text" value="<%= session.user.location %>" name="location_country"/>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Email</label>

                        <div class="controls">
                            <input type="text" value="<%= session.user.email %>" name="email"/>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Password</label>

                        <div class="controls">
                            <input type="text" placeholder="New Password?" name="password"/>
                            <span style="font-style: italic; color:#333; margin-left:15px">Leave empty to keep your current password</span>
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="controls">
                            <input type="submit" id="button-submit" value="Save Changes" class="btn btn-primary"/>
                            <input type="button" id="button-cancel" value="Cancel" class="btn"
                                   style="margin-left:10px"/>
                        </div>
                    </div>

                </fieldset>

            </form>

        </div>
    </div>
    <!--./Row Fluid-->
</div>
<!--./container fluid-->
<footer>
    <div class="container" style="margin-top: 50px">
        <p>&copy; E-mmersion Linguistique 2013</p>
    </div>
</footer>

</div>
<!-- /container -->
<!-- Le javascript
                                                                                                                    ================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="assets/js/jquery-1.9.1.min.js"></script>
<script src="assets/js/bootstrap.js"></script>
<script src="assets/js/rating/jquery.raty.min.js"></script>
<script type="text/javascript">
    $(window).load(function () {
        $('#button-cancel').click(function (e) {
            e.preventDefault();
            window.location.href = '/dashboard';
        });
    });
</script>

</body>
</html>

